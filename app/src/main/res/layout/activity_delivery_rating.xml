<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_delivery_rating"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sgrulovic.sg_final_project.DeliveryRating">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/a1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/rating_logo" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rating_logo"
        android:weightSum="1">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rating"
            android:orientation="horizontal"
            android:gravity="top|center">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/star1"
                android:textSize="30sp"
                android:textStyle="normal|bold" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/star2"
                android:textSize="30sp"
                android:textStyle="normal|bold" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/star3"
                android:textSize="30sp"
                android:textStyle="normal|bold" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/star4"
                android:textSize="30sp"
                android:textStyle="normal|bold" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/star5"
                android:textSize="30sp"
                android:textStyle="normal|bold" />

        </RadioGroup>

        <TextView
            android:text="Stars:           1     2     3     4     5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textStyle="normal|bold"
            android:textSize="18sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/rating_comment"
            android:hint="   Comment"
            android:layout_weight="1.06" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:text="GIVE RATING"
                android:layout_height="wrap_content"
                android:id="@+id/rating_give"
                android:textSize="14sp"
                android:layout_width="170dp" />

            <Button
                android:text="VIEW OTHER RATINGS"
                android:layout_height="wrap_content"
                android:id="@+id/rating_other"
                android:textSize="14sp"
                android:layout_width="170dp" />

        </LinearLayout>

        <Button
            android:text="BACK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rating_back"
            android:textSize="24sp" />

    </LinearLayout>
</RelativeLayout>
